{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "exclude": [
    "node_modules/**",
    "package.json",
    "src/zlib.ts",
    "dist/**"
  ]
}
